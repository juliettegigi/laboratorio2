html
    head 
      link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
             integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" 
             crossorigin="anonymous")
      link(href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet")       
      title Alfgo 
    body
      .container
        include navBar.pug
      .container 
        table#example.display(style="width:100%")
          thead
            tr
              th Determinacion
              th Edad mínima
              th Edad máxima
              th Sexo 
              th Embarazo 
              th Valor mínimo 
              th Valor máximo
              th 
          - console.log({arrRef})    
          if arrRef
            tbody
              each ref in arrRef
                tr
                  td= ref.Determinacion.nombre
                  td= ref.edadMin
                  td= ref.edadMax
                  td= ref.sexo
                  td= ref.embarazo
                  td= ref.valorMinimo 
                  td= ref.valorMaximo
                  td 
                    if ref.deletedAt
                      form(action=`/vistaTecBioq/activarRef` method="post")
                            input(type="hidden" name="id" value=ref.id)
                            input(type="submit" value="Activar" class="btn btn-primary")
                    else 
                      form(action=`/vistaTecBioq/desactivarRef` method="post")
                            input(type="hidden" name="id" value=ref.id)
                            input(type="submit" value="Desactivar" class="btn btn-primary")
          tfoot
            tr
              th Determinacion
              th Edad mínima
              th Edad máxima
              th Sexo 
              th Embarazo 
              th Valor mínimo 
              th Valor máximo
              th 
      
      script(src="https://code.jquery.com/jquery-3.7.0.js") 
      script(src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")         
      script. 
        new DataTable('#example');
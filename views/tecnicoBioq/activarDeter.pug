      link(href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet")       
      title Alfgo 
    body
      .container
        include navBar.pug
      .container 
        table#example.display(style="width:100%")
          thead
            tr
              th Nombre
              th Valor mínimo
              th Valor máximo
              th Unidad
          - console.log({determinaciones})    
          if determinaciones
            tbody
              each det in determinaciones
                tr
                  td= det.nombre 
                  td= det.valorMin 
                  td= det.valorMax 
                  td= det.unidadMedida
                  td 
                    form(action=`/vistaTecBioq/activarDeterminacion` method="post")
                          input(type="hidden" name="id" value=det.id)
                          input(type="submit" value="Activar/Desactivar" class="btn btn-primary")
          tfoot
            tr
              th Nombre
              th Tipo de muestra
              th Tipo de examen
              th Editar
      
      script(src="https://code.jquery.com/jquery-3.7.0.js") 
      script(src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")         

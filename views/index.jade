doctype html
html
  head
    title Formulario de Inicio de Sesión
  body
    h1 Inicio de Sesión
    form(action="/login", method="POST" name="formu")
      label(for="usuario") Usuario
      input(type="text", id="usuario", name="email", placeholder="Ingresa tu usuario o correo electrónico", required)
      if(email)
        br
        p(id="errorEmail") #{email}
      br
      label(for="contrasena") Contraseña:
      input(type="password", id="contrasena", name="contrasena", placeholder="Ingresa tu contraseña", required)
      if(pass)
        br
        p(id="errorPass") #{pass}
      br
      br
      select(id="opciones" name="nombreRol")
        option(value="paciente") paciente
        option(value="tecnico") tecnico
        option(value="Bioquimico") bioquimico
      input(type="submit")
      br
    script(src="./javascripts/index.js")  
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Etiqueta
    style.
      body {
        
        width: 4cm;
        height: 2cm;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }
      .etiqueta-container {
        width: 100%;
        height: 100%;   
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        text-align: center;
      }
  body
    .etiqueta-container
      .etiqueta-content
        h1 Nº de orden: #{numeroOrden}
        p Código de persona: #{codigoPersona}
        p Nombre: #{nombre}
        p Documento del paciente: #{documentoPaciente}
        p Fecha y Hora: #{fechaHora}
      .button-container
        button(id="imprimirButton") Imprimir
        button(id="cancelar") Cancelar 
      
 
  script.
     
     document.getElementById("imprimirButton").addEventListener("click", function() {
      hideButtons();
     window.print();
     
     });
     function hideButtons() {
      const buttonContainer = document.querySelector(".button-container");
      buttonContainer.style.display = "none";
    }

    window.addEventListener("beforeprint", function() {
      hideButtons();
    });
    document.getElementById("cancelar").addEventListener("click", function() {
       window.location.href = '/orden'; 
     
     });







